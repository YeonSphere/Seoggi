// Enhanced testing framework for Seoggi

function runTest(testName, testFunction) {
    console.log(`Running test: ${testName}`);
    try {
        testFunction();
        printColored('Test passed!', COLORS.SUCCESS);
    } catch (error) {
        printColored(`Test failed: ${error}`, COLORS.ERROR);
    }
}

function assertEqual(actual, expected) {
    if (actual !== expected) {
        throw new Error(`Expected ${expected}, but got ${actual}`);
    }
}

function runAllTests() {
    printColored('Running all tests...', COLORS.INFO);
    // Call individual test functions here
    runTest('Example Test', function() {
        const result = add(1, 2);
        assertEqual(result, 3);
    });
}

// Example function to test
function add(x, y) {
    return x + y;
}

runAllTests();
